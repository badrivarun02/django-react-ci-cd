# terraform.tfvars.example – copy to terraform.tfvars and edit

aws_region     = "ap-south-1"          # your AWS region (e.g. ap-south-1, us-east-1)

instance_type  = "t3.micro"            # keep for free tier

project_name   = "hello-world-app"     # used for naming resources

repo_url       = "https://github.com/BVD009/your-repo-name.git"   # ← your real GitHub repo URL

repo_branch    = "main"                # or whatever branch you use